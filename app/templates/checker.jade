extends ./layouts/base

block scripts
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script src="http://code.highcharts.com/highcharts.js"></script>
    !=js('/scripts/checker.js')
    :coffeescript
        $ () =>
            locals = JSON.parse('!{JSON.stringify(locals)}')
            ($ '#chart').highcharts Checker.getLawChartOptions locals.percents,
                                                               locals.law
            ($ '#magnitudes').highcharts Checker.getMagnitudeChartOptions locals.magnitudes

block content
    div.row(ng-controller='Checker')
        div.span8
            div#chart
        div.span4.text-center
            p Number of observations: #{total}
            div#magnitudes
            a(href='/').btn.btn-primary.btn-large Try another dataset